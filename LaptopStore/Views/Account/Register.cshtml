@{
    ViewData["Title"] = "Register";
}
@model LaptopStore.Models.Account.RegisterInfo

<div class="container d-flex justify-content-center">
    <div class="col-md-4 col-10 bg-info-subtle d-flex justify-content-center rounded-2 mt-4 mb-3" style="border:solid 1px">

        <form asp-action="VerifyRegister" method="post" class="mb-4 mt-4 pe-4 ps-4">
            <div class="d-flex justify-content-center mb-3"
                 style="margin-top: -15px">
               
                <h3>Đăng Ký</h3>
            </div>

            <div class="row mb-2">
                <div class="col-5">
                    <label asp-for="FirstName" class="form-label">Tên</label> <input type="text" 
                                                                 class="form-control"  asp-for="FirstName"  />
                                                                 <span asp-validation-for="FirstName" class="text-danger"></span>


                </div>
                <div class="col-7">
                    <label asp-for="LastName" class="form-label">Họ</label> <input type="text"
                                                                class="form-control"   asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-2">
                <label asp-for="EmailOrPhone" class="form-label">Email</label> <input onblur="checkEmailRegister()" id="EmailOrPhone" type="email" class="form-control"
                                                                              asp-for="EmailOrPhone" />
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
               
                    <span id="errorCheckEmail" class="text-danger" style="display: none"></span>
               
               

            </div>
            <div class="mb-2">
                <label asp-for="Password" class="form-label">Mật khẩu</label> <input type="password" class="form-control"
                                                                   asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu </label> <input type="password" class="form-control"
                                                                            asp-for="ConfirmPassword"  />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-2 d-flex flex-column justify-content-between">
                <button type="submit" class="btn btn-primary mb-2">
                    Đăng
                    ký
                </button>
                <span class="align-self-center">
                    bạn đã có tài khoản ?<a asp-controller="Account" asp-action="Login">Đăng nhập</a>
                </span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/ajaxCheckEmail.js">

    </script>
}