@{
	ViewData["Title"] = "Login";
}
@model LaptopStore.Models.Account.UserLogin
<div class="container d-flex justify-content-center ">
	<div class="col-md-4 col-10 d-flex justify-content-center rounded-2 mt-5 mb-4" style="border: solid 1px">
		
			<form asp-action="Login" method="post" class="mt-4 mb-4">

				<div class="d-flex justify-content-center mb-2"
					 style="margin-top: -10px">
					<h3>Đăng Nhập</h3>
				</div>
				

				<div class="mb-3">
				<label asp-for="Email" class="form-label">Email</label> <input asp-for="Email" id="EmailOrPhone" type="text" class="form-control" onblur="checkEmailLogin()"
																			  size="32"
																			 />
				<span asp-validation-for="Email" class="text-danger"></span>
				<span id="errorCheckEmail" class="text-danger" style="display: none"></span>

			</div>
				<div class="mb-3">
				<label asp-for="Password" class="form-label">Mật khẩu</label> <input asp-for="Password" type="password" class="form-control"
													    />
				<span asp-validation-for="Password" class="text-danger"></span>
				</div>



				<div class="mt-4 d-flex flex-column">
					<button type="submit" class="btn btn-primary">
						Đăng Nhập
					</button>
					<span class="mt-2 align-self-center">
						bạn chưa có tài
						khoản ?<a asp-controller="Account" asp-action="Register"
							>Đăng ký</a>
					</span> <span class="mt-2 align-self-center">
						bạn quên mật khẩu ?<a asp-controller="Account" asp-action="ForgotPassword">quên mật khẩu</a>
					</span>
				</div>
				<div class="mt-3 d-flex flex-column">
					<a href="loginWithSMS.jsp" class="btn btn-primary">
						<i class="bi bi-telephone-fill"></i> đăng nhập với SMS
					</a>
				</div>
			</form>
		</div>
	</div>
@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
			integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
			crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script src="~/js/ajaxCheckEmail.js">

	</script>
}

