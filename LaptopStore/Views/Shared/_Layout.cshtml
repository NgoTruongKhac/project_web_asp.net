							<li class="nav-item me-4">
							<a class="nav-link" asp-controller="Home" asp-action="Index"
								   aria-current="page" >
									<i class="fa-solid fa-house"></i> Trang Chủ
								</a>
							</li>
							<li class="nav-item me-4">
